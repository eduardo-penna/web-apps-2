<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "author", "Author's/ Name" %>
    <%= form.text_field "author" %>
  </p>
  <p>
    <%= form.label "body","Input your Post Text" %>
    <%= form.text_field "body" %>
</p>
<p>
    <%= form.label "image", "Insert your Image Link" %>
    <%= form.text_field "image" %>
 </p>
  <%= form.submit %>
<% end %>